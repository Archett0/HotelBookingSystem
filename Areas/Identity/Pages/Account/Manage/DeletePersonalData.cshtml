@page
@model DeletePersonalDataModel
@{
	ViewData["Title"] = "Delete Personal Data";
	ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>删除个人数据</h4>

<div class="alert alert-warning" role="alert">
	<p>
		<strong>删除您的个人数据同时也会删除您的账户，且此操作不可撤销！</strong>
	</p>    
	<p>
		<strong>由于这是敏感操作，我们需要您输入您的密码来继续</strong>
	</p>
</div>

<div>
	<form id="delete-user" method="post" class="form-group">
		<div asp-validation-summary="All" class="text-danger"></div>
		@if (Model.RequirePassword)
		{
			<div class="form-group mt-4">
				<label asp-for="Input.Password">密码</label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
		}
		<button class="btn btn-danger mt-4" type="submit">我确认删除数据并永久关闭个人账户</button>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}