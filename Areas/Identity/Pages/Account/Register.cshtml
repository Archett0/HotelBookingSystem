@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	// Layout = "_AuthLayout"; 
}
<br/>
<h1>注册</h1>
<div class="row">
	<div class="col-md-4">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h4>创建新会员</h4>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.LastName" class="mt-4"></label>
				<input asp-for="Input.LastName" class="form-control" />
				<span asp-validation-for="Input.LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.FirstName" class="mt-4"></label>
				<input asp-for="Input.FirstName" class="form-control" />
				<span asp-validation-for="Input.FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Email" class="mt-4"></label>
				<input asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password" class="mt-4"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword" class="mt-4"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary mt-4">注册</button>
		</form>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h4>换个方法登录</h4>
			<hr />
			@{
				if ((Model.ExternalLogins?.Count ?? 0) == 0)
				{
					<div>
						<p>
							@* There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a> *@
							@* for details on setting up this ASP.NET application to support logging in via external services. *@
							暂无可用的外部登录认证方式
						</p>
					</div>
				}
				else
				{
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
						<div>
							<p>
								@foreach (var provider in Model.ExternalLogins)
								{
									<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
								}
							</p>
						</div>
					</form>
				}
			}
		</section>
	</div>
</div>

