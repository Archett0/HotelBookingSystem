@model HotelBookingSystem.Models.Room

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h1>修改</h1>

<h4>房间</h4>
<hr />
<div class="row">
	<div class="col-md-4 table-special-background">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group m-3">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="Status" class="control-label"></label>
				<select class="form-select" asp-for="Status">
					<option value="0">空闲</option>
					<option value="1">暂不可用</option>
					<option value="2">等待维修</option>
					<option value="3">等待检查</option>
				</select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="RoomTypeId" class="control-label"></label>
				<select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId"></select>
				<span asp-validation-for="RoomTypeId" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="HotelId" class="control-label"></label>
				<select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId"></select>
				<span asp-validation-for="HotelId" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<input type="submit" value="修改" class="btn btn-warning" />
				<a asp-action="Index" class="btn btn-outline-info">返回房间列表页</a>
			</div>
		</form>
	</div>
</div>

