<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - HotelBookingSystem</title>
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-minty.css" /> *@
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-zephyr.css" /> *@
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-cybrog.css" />
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	@Html.Partial("_NavBar")	@*使用部分View来渲染页面,使得代码的可移植性更强*@
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; @DateTime.Now.Year - HotelBookingSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
