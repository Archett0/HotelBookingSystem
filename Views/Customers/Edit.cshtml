@model HotelBookingSystem.Models.Customer

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h1>修改</h1>

<h4>顾客</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group m-3">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="MembershipTypeId" class="control-label"></label>
				<select asp-for="MembershipTypeId" class="form-control" asp-items="ViewBag.MembershipTypeId"></select>
				<span asp-validation-for="MembershipTypeId" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="Birthday" class="control-label"></label>
				<input asp-for="Birthday" class="form-control" type="date"/>
				<span asp-validation-for="Birthday" class="text-danger"></span>
			</div>
			<div class="form-group m-3">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group form-check m-3">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsSubscribedToNewsLetter" /> @Html.DisplayNameFor(model => model.IsSubscribedToNewsLetter)
				</label>
			</div>
			<div class="form-group m-3">
				<input type="submit" value="修改" class="btn btn-warning" />
				<a asp-action="Index" class="btn btn-outline-info">返回顾客列表页</a>
			</div>
		</form>
	</div>
</div>

