@model HotelBookingSystem.Models.Customer

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h1>删除</h1>

<h3 class="text-danger">你确认要删除这个顾客？本操作不可撤销！</h3>
<div>
	<hr />
	<div class="card border-secondary mb-3" style="max-width: 50rem;">
		<div class="card-body">
			<dl class="row m-3">
				<dt class = "col-sm-2">
					@Html.DisplayNameFor(model => model.Name)
				</dt>
				<dd class = "col-sm-10">
					@Html.DisplayFor(model => model.Name)
				</dd>
				<dt class = "col-sm-2">
					@Html.DisplayNameFor(model => model.IsSubscribedToNewsLetter)
				</dt>
				<dd class = "col-sm-10">
					@if (Model.IsSubscribedToNewsLetter.Equals(true))
					{
						<text>是</text>
					}
					else
					{
						<text>否</text>
					}
				</dd>
				<dt class = "col-sm-2">
					@Html.DisplayNameFor(model => model.MembershipType)
				</dt>
				<dd class = "col-sm-10">
					@Html.DisplayFor(model => model.MembershipType.Name)
				</dd>
				<dt class = "col-sm-2">
					@Html.DisplayNameFor(model => model.Birthday)
				</dt>
				<dd class = "col-sm-10">
					@Html.DisplayFor(model => model.Birthday)
				</dd>
				<dt class = "col-sm-2">
					@Html.DisplayNameFor(model => model.Email)
				</dt>
				<dd class = "col-sm-10">
					@Html.DisplayFor(model => model.Email)
				</dd>
			</dl>
	
			<form asp-action="Delete">
				<input type="hidden" asp-for="Id" />
				<input type="submit" value="删除" class="btn btn-danger" /> |
				<a asp-action="Index" class="btn btn-info">返回顾客列表页</a>
			</form>
		</div>
	</div>
	</div>